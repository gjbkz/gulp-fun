{
    "name": "gulp-fun",
    "version": "1.1.4",
    "description": "Create a transform stream from sync/async function.",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=12"
    },
    "repository": "kei-ito/gulp-fun",
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "scripts": {
        "lint": "eslint src",
        "build": "tsc --project tsconfig.build.json",
        "test": "ava",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "peerDependencies": {
        "@types/vinyl": "2.0.6"
    },
    "peerDependenciesMeta": {
        "@types/vinyl": {
            "optional": true
        }
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.19.5",
        "@nlib/githooks": "0.1.0",
        "@types/node": "18.7.14",
        "@types/vinyl-fs": "2.4.12",
        "@typescript-eslint/eslint-plugin": "5.36.2",
        "@typescript-eslint/parser": "5.36.1",
        "ava": "4.3.3",
        "eslint": "8.23.0",
        "lint-staged": "13.0.3",
        "npm-run-all": "4.1.5",
        "rimraf": "3.0.2",
        "ts-node": "10.9.1",
        "typescript": "4.8.2",
        "vinyl-fs": "3.0.3"
    },
    "eslintConfig": {
        "extends": "@nlib/eslint-config",
        "rules": {
            "@nlib/no-globals": "off"
        }
    },
    "ava": {
        "extensions": [
            "js",
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "test/**/*.test.ts"
        ]
    },
    "lint-staged": {
        "*!(.d).{ts,tsx,js,mjs,cjs,jsx}": "eslint"
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}

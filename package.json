{
    "name": "gulp-fun",
    "version": "1.1.2",
    "description": "Create a transform stream from sync/async function.",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=12"
    },
    "repository": "kei-ito/gulp-fun",
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "scripts": {
        "lint": "eslint src",
        "build": "tsc --project tsconfig.build.json",
        "test": "ava",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "peerDependencies": {
        "@types/vinyl": "2.0.4"
    },
    "peerDependenciesMeta": {
        "@types/vinyl": {
            "optional": true
        }
    },
    "devDependencies": {
        "@nlib/changelog": "0.1.9",
        "@nlib/eslint-config": "3.17.23",
        "@nlib/githooks": "0.0.5",
        "@nlib/lint-commit": "0.1.4",
        "@types/node": "15.12.5",
        "@types/vinyl-fs": "2.4.11",
        "@typescript-eslint/eslint-plugin": "4.28.1",
        "@typescript-eslint/parser": "4.28.1",
        "ava": "3.15.0",
        "eslint": "7.29.0",
        "lint-staged": "11.0.0",
        "npm-run-all": "4.1.5",
        "rimraf": "^3.0.2",
        "ts-node": "10.0.0",
        "typescript": "4.3.5",
        "vinyl-fs": "3.0.3"
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}

{
    "name": "gulp-fun",
    "version": "1.1.1",
    "description": "Create a transform stream from sync/async function.",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=6"
    },
    "repository": "kei-ito/gulp-fun",
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "scripts": {
        "lint": "eslint src/**/*.ts",
        "build": "tsc",
        "test": "ava -v",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "run-s version:changelog version:add",
        "prepack:test": "rimraf lib/*.test.*",
        "prepack:sourcemap": "remove-sourcemap lib",
        "prepack": "run-s prepack:test prepack:sourcemap"
    },
    "devDependencies": {
        "@commitlint/cli": "8.2.0",
        "@commitlint/config-conventional": "8.2.0",
        "@nlib/lint": "^3.15.1",
        "@nlib/remove-sourcemap": "^3.15.6",
        "@types/node": "^12.12.16",
        "@types/vinyl": "2.0.4",
        "@types/vinyl-fs": "2.4.11",
        "@typescript-eslint/eslint-plugin": "^2.11.0",
        "@typescript-eslint/parser": "^2.11.0",
        "ava": "2.4.0",
        "conventional-changelog-cli": "2.0.31",
        "eslint": "^6.7.2",
        "husky": "^3.1.0",
        "lint-staged": "^9.5.0",
        "npm-run-all": "4.1.5",
        "rimraf": "^3.0.0",
        "ts-node": "^8.5.4",
        "typescript": "^3.7.3",
        "vinyl-fs": "3.0.3"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "lib/**/*.test.js"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
